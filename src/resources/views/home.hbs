{{!-- <h1>{{course}}</h1> --}}
<a href="/news">News</a>
<div class="mt-4">
  <div class="row">
    {{#each courses}}

      <div class="col-sm-6 col-lg-4">
        <div class="card card-course-item">
          <a href="/course/{{this.slug}}">
            <img
              src="{{this.image}}"
              class="card-img-top"
              alt="{{this.image}}"
            />
          </a>
          <div class="card-body">
            <a href="/course/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.discription}}</p>
            <a href="#" class="btn btn-primary">Mua khoa hoc</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>