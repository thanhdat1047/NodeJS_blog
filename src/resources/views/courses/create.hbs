<div class="mt-4">
  <h3>Dang khoa hoc</h3>
  <form method="POST" action="/course/store">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Ten"
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Discription</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        placeholder="Mo ta"
      />
    </div>
    <div class="mb-3">
      <label for="videoId" class="form-label">Video Id</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        placeholder="Video Id"
      />
    </div>
    <div class="mb-3">
      <label for="level" class="form-label">Level</label>
      <input
        type="text"
        class="form-control"
        id="level"
        name="level"
        placeholder="Level"
      />
    </div>

    <button type="submit" class="btn btn-primary">Them khoa hoc</button>
  </form>
</div>